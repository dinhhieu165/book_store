<%= form_for :session, url: login_path, class: "login-inside" do |f| %>
  <div class="styled-input agile-styled-input-top">
  <%= f.text_field :email, placeholder: "Email", class: "form-control"  %><br>
  </div>
  <div class="styled-input">
  <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>
  <div class="modal-inline">
    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span><%=t "views.sessions.new.remember" %></span>
    <% end %>&emsp;&emsp;
    <%= link_to t("views.sessions.new.forgot"), new_password_reset_path %>
  </div>
  <br>
  <br>
  <%= f.submit "Login", class: "btn btn-success" %>
<% end %>
